<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://orderEdit.caption"
        focusComponent="form"
        messagesPack="com.company.service4vehicles.web.screens.order">
    <data>
        <instance id="orderDc"
                  class="com.company.service4vehicles.entity.Order">
            <view extends="_local">
                <property name="address" view="_minimal"/>
                <property name="client" view="_minimal"/>
                <property name="service" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="orderDc">
            <column width="350px">
                <dateField id="start_timeField" property="start_time"/>
                <checkBox id="doneField" property="done"/>
                <pickerField id="addressField" property="address">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="clientField" property="client">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="serviceField" property="service">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="end_timeField" property="end_time"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
